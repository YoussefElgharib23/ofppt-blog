{% extends 'base.html.twig' %}

{% block title parent() ~ ' | Create New User' %}

{% block body %}
    {% set in_admin = true %}
    <div class="nk-content">
        <div class="container wide-xl">
            <div class="nk-content-inner">
                {{ include('partials/_sidebar.html.twig') }}
                <div class="nk-content-body">
                    <div class="nk-content-wrap">
                        <div class="nk-block-head nk-block-head-sm">
                            <div class="nk-block-head-content">
                                <h3 class="nk-block-title page-title">Create new user</h3>
                                <div class="text-soft">
                                    <p>Create your new user.</p>
                                </div>
                            </div>
                        </div>
                        <div class="nk-block">
                            <div class="row g-gs">
                                <div class="col-xl-12 mx-auto">
                                    <div class="card card-bordered h-100">
                                        <div class="col-md-8 mx-auto card-inner">
                                            <div class="card-title">
                                                <div class="card-title text-center">
                                                    <h3>Create new user</h3>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <div style="height: 200px; width: 200px" class="d-flex justify-content-center">
                                                    <img src="{{ asset('images/no-image.png') }}" id="profile-pic_pre-js" class="rounded-circle" alt="">
                                                </div>
                                            </div>
                                            {{ form_start(form, {
                                                'attr': {
                                                    'class': 'form-validate',
                                                }
                                            }) }}
                                            <div class="row gy-4">
                                                <div class="form-group col-12">
                                                    {{ form_row(form.imageFile) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="row gy-4">
                                                    <div class="col-6">
                                                        {{ form_row(form.firstName) }}
                                                    </div>
                                                    <div class="col-6">
                                                        {{ form_row(form.lastName) }}
                                                    </div>
                                                </div>
                                                <div class="row gy-4">
                                                    <div class="col-12">
                                                        {{ form_row(form.username) }}
                                                    </div>
                                                </div>
                                                <div class="row gy-4">
                                                    <div class="col-12">
                                                        {{ form_row(form.email) }}
                                                    </div>
                                                </div>
                                                <div class="row gy-4">
                                                    <div class="col-12">
                                                        {{ form_row(form.password) }}
                                                    </div>
                                                </div>
                                                <div class="row gy-4">
                                                    <div class="col-12">
                                                        {{ form_row(form.gender) }}
                                                    </div>
                                                </div>
                                                <div class="row gy-4">
                                                    <div class="col-6">
                                                        <div class="custom-control custom-switch">
                                                            {{ form_row(form.status, {
                                                                label_attr: {
                                                                    class: 'custom-control-label'
                                                                },
                                                                attr: {
                                                                    class: 'custom-control-input'
                                                                }
                                                            }) }}
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="custom-control custom-switch">
                                                            {{ form_row(form.isVerified, {
                                                                label_attr: {
                                                                    class: 'custom-control-label'
                                                                },
                                                                attr: {
                                                                    class: 'custom-control-input'
                                                                }
                                                            }) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row gy-4 d-flex align-items-end">
                                                    <div class="col-6">
                                                        {{ form_row(form.displayName) }}
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="custom-control custom-switch">
                                                            {{ form_row(form.isChangedToDisplay, {
                                                                label: 'Use display name',
                                                                label_attr: {
                                                                    class: 'custom-control-label'
                                                                },
                                                                attr: {
                                                                    class: 'custom-control-input'
                                                                }
                                                            }) }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row gy-4 d-flex align-items-end">
                                                    <div class="col-6">
                                                        {{ form_row(form.birthDate, {
                                                            attr: {
                                                                class: 'form-control date-picker'
                                                            }
                                                        }) }}
                                                    </div>
                                                    <div class="col-6">
                                                        {{ form_row(form.roles) }}
                                                    </div>
                                                </div>
                                                <div class="row gy-4">
                                                    <div class="col-12">
                                                        {{ form_row(form.phoneNumber) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit"
                                                    class="actions-submit btn btn-dim btn-block btn-outline-dark">
                                                <em class="icon ni ni-plus-sm position-relative" style="top: -1px"></em>
                                                Create user
                                            </button>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div><!-- .col -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>

        $('select').each((i, ele) => {
            $(ele).select2()
        });

        $(document).ready(() => {
            let $checkboxes = $('input[type=checkbox]')
            $checkboxes.each((i, ele) => {
                let parent = $(ele).parents('.form-check')
                if (parent && $(parent).hasClass('form-check')) {
                    $(parent).removeClass('form-check')
                }
            })

            let labels = $('label')
            if (labels) {
                labels.each((i, ele) => {
                    if (!$(ele).hasClass('form-label')) {
                        $(ele).addClass('form-label')
                    }
                })
            }
        })

        function readURL(input) {
            if (input.files && input.files[0]) {
                let reader = new FileReader();

                reader.onload = function(e) {
                    let img = $('img#profile-pic_pre-js').length ? $('img#profile-pic_pre-js') : $('img#preview-image')
                    if ( img.length ) {
                        img.attr('src', e.target.result);
                    }
                    else {
                        img.attr('src', e.target.result);
                    }
                    setTimeout(function () {
                        $('.load-overlay').removeClass('show');
                        setTimeout(function () {
                            img.addClass('show')
                        }, 500)
                    }, 200)
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $('input[type=file]').on('change',function () {
            $('.load-overlay').addClass('show')
            $('#profile-pic_pre-js').removeClass('show')
            readURL(this)
        })
    </script>
    <script src="{{ asset('assets/js/form-submit/app.js') }}"></script>
{% endblock %}

