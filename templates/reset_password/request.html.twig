{% set notNavbar = true %}

{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="nk-content ">
        <div class="nk-block nk-block-middle nk-auth-body  wide-xs">
            <div class="brand-logo pb-4 text-center">
                <a href="{{ path('app_blog') }}" class="logo-link">
                    <img class="logo-light logo-img logo-img-lg" src="{{ __settings.logoName }}" alt="logo">
                    <img class="logo-dark logo-img logo-img-lg" src="{{ __settings.logoName }}" alt="logo-dark">
                </a>
            </div>
            <div class="card card-bordered">
                <div class="card-inner card-inner-lg">
                    <div class="nk-block-head">
                        <div class="nk-block-head-content">
                            <h5 class="nk-block-title">Reset password</h5>
                            <div class="nk-block-des">
                                <p>If you forgot your password, well, then weâ€™ll email you instructions to reset your password.</p>
                            </div>
                        </div>
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                    </div>
                    {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email, {
                        'label_attr': {
                            class: 'form-label'
                        }
                    }) }}

                    <button class="btn btn-primary btn-block">Send password reset email</button>
                    {{ form_end(requestForm) }}
                    <div class="form-note-s2 text-center pt-4">
                        <a href="{{ path('app_login') }}"><strong>Return to login</strong></a>
                    </div>
                </div>
            </div>
        </div>
        {{ include('partials/_footer.html.twig') }}
    </div>
{% endblock %}